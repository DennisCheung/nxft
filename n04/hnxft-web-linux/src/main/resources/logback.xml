<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <conversionRule conversionWord="highlightex" converterClass="com.wit.logging.slf4j.HighlightingCompositeConverterEx" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) [%X{username}-%X{times}] %green(%logger{0}) - %highlightex(%msg) %n</Pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${user.home}/logs/hbcsq.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- 每日、每20MB归档 -->
      <fileNamePattern>${user.home}/logs/hbcsq.%d{yyyy-MM-dd}.%i.log</fileNamePattern>

      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>20MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>

      <!-- 保留30天历史日志 -->
      <maxHistory>30</maxHistory>
    </rollingPolicy>

    <encoder>
      <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{username}-%X{times}] %logger{0} - %msg%n</Pattern>
    </encoder>
  </appender>

  <logger name="com.wit.qix.client" level="debug"/>
  <logger name="org.springframework.web.servlet.mvc.support" level="debug"/>
  <logger name="com.wit.hbcs" level="debug"/>

  <logger name="com.wit.hbcs.qic.runtime.filter.LogFilter" level="info"/>

  <root level="info">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
</configuration>
